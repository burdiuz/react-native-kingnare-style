{
  "name": "@actualwave/react-native-kingnare-style",
  "description": "Simple wrappers over standard React Naive components to give them look of Kingnare Theme",
  "version": "0.0.1",
  "files": [
    "actions.js",
    "Area.js",
    "Button.js",
    "Header.js",
    "Rule.js",
    "Screen.js",
    "Text.js",
    "Modal.js",
    "TextArea.js",
    "TextInput.js",
    "withLabel.js",
    "withStyle.js",

    "actions.map",
    "Area.map",
    "Button.map",
    "Header.map",
    "Rule.map",
    "Screen.map",
    "Text.map",
    "Modal.map",
    "TextArea.map",
    "TextInput.map",
    "withLabel.map",
    "withStyle.map"
  ],
  "private": true,
  "keywords": [
    "js",
    "javascript"
  ],
  "homepage": "https://github.com/burdiuz/react-native-kingnare-style",
  "bugs": {
    "url": "https://github.com/burdiuz/react-native-kingnare-style/issues",
    "email": "burdiuz@gmail.com"
  },
  "license": "MIT",
  "author": "Oleg Galaburda <burdiuz@gmail.com> (http://actualwave.com/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/burdiuz/react-native-kingnare-style.git"
  },
  "dependencies": {
    "@actualwave/is-function": "0.0.1"
  },
  "peerDependencies": {
    "react": "16.6.0-alpha.8af6728",
    "react-native": ">0.57.3",
    "prop-types": "15.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-external-helpers": "^7.0.0",
    "@babel/runtime": "^7.1.2",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-istanbul": "^5.0.1",
    "babel-preset-jest": "^23.2.0",
    "eslint": "^5.6.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "gulp": "^3.9.1",
    "husky": "^1.0.1",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "metro-react-native-babel-preset": "^0.48.1",
    "prettier": "^1.14.3",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "through2": "^2.0.3"
  },
  "lint-staged": {
    "source/**/*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "babel-plugin-transform-es2015-modules-commonjs",
          "babel-plugin-transform-flow-strip-types",
          "babel-plugin-transform-class-properties",
          [
            "babel-plugin-transform-object-rest-spread",
            {
              "useBuiltIns": true
            }
          ]
        ],
        "presets": [
          "jest"
        ]
      }
    }
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "source/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "modulePathIgnorePatterns": [
      "\\/\\."
    ]
  },
  "scripts": {
    "start": "npm run build",
    "build": "rollup --config",
    "build:watch": "rollup --config --watch \"./source\"",
    "lint": "./node_modules/.bin/eslint \"source/**/*.js\"",
    "test": "jest --colors",
    "test:watch": "jest --colors --watch",
    "lint-staged": "lint-staged",
    "precommit": "npm run build && npm run test && npm run lint-staged"
  }
}
